{
  "title": "Change option <esc> to cmd-`",
  "rules": [
    {
      "description": "option_escape_command_backtick",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": [
            {
              "modifiers": "left_command",
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    }
  ]
}
