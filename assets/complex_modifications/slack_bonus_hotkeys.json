{
  "title": "Slack hotkeys",
  "rules": [
    {
      "description": "m-` next conversation",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "conditions": [
            {
              "bundle_identifiers": [
                "com.tinyspeck.slackmacgap"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ]
        }
      ]
    }
  ]
}
