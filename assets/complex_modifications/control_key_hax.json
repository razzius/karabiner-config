{
  "title": "control key hax",
  "rules": [
    {
      "description": "c-n c-p to down up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "conditions": [
            {
              "bundle_identifiers": [
                "com.google.Chrome"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "to": [{
            "key_code": "down_arrow"
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "conditions": [
            {
              "bundle_identifiers": [
                "com.google.Chrome"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "to": [{
            "key_code": "up_arrow"
          }]
        }
      ]
    },
    {
      "description": "c-q to backward word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "c-' to \"",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "quote",
            "modifiers": ["shift"]
          }]
        }
      ]
    },
    {
      "description": "c-u to delete line",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "conditions": [
            {
              "bundle_identifiers": ["co.zeit.hyper", "com.apple.Terminal"],
              "type": "frontmost_application_unless"
            }
          ],
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "c-b to backward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "c-9 and c-0 to ( and )",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "9",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "0",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "c-- to _",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "hyphen",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "c-8 to *",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "8",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "8",
            "modifiers": ["shift"]
          }]
        }
      ]
    }
  ]
}
