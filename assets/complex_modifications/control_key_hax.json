{
  "title": "control key hax",
  "rules": [
    {
      "description": "c-q to backward word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "left_arrow",
            "modifiers": ["left_option"]
          }]
        }
      ]
    },
    {
      "description": "c-u to delete line",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
	  "conditions": [
	    {
	      "bundle_identifiers": [
	        "co.zeit.hyper"
	      ],
	      "type": "frontmost_application_unless"
	    }
	  ],
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "c-b to backward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "left_arrow"
          }]
        }
      ]
    },
    {
      "description": "c-9 and c-0 to ( and )",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "9",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "9",
            "modifiers": ["shift"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "0",
            "modifiers": ["shift"]
          }]
        }
      ]
    },
    {
      "description": "c-- to _",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "hyphen",
            "modifiers": ["shift"]
          }]
        }
      ]
    }
  ]
}
