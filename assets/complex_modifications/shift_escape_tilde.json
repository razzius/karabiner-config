{
  "title": "Change shift <esc> to ~",
  "rules": [
    {
      "description": "shift_escape_tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
  ]
}
